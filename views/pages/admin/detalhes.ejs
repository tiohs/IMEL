<!DOCTYPE html>
<html lang="pt">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>IMEL</title>

  <link href="../../fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="../../css/imel.css" rel="stylesheet">

</head>

<body id="page-top">

  <div id="wrapper">

    <%- include('./includes/sidebar') %>

        <!-- inicio da Pag. de Conteúdo -->
        <div class="container-fluid">

          <!-- ACTIONS -->
          <section id="action" class="py-4 mb-4 bg-light">
            <div class="container">
              <div class="row">
                <div class="col-md-3 mr-auto">
                  <a href="/admin/cadastrar" class="btn btn-light btn-block">
                    <i class="fa fa-arrow-left"></i> Voltar para Dashboard
                  </a>
                </div>
                <div class="col-md-3">
                  <a href="#" class="btn btn-success btn-block">
                    <i class="fa fa-check"></i> <span id="cadastrar">Salvar mudanças</span> 
                  </a>
                </div>
                <div class="col-md-4">
                    <a href="#" class="btn btn-success btn-block" data-toggle="modal" data-target="#passwordModal">
                      Mudar Password
                    </a>
                  </div>
              </div>
            </div>
          </section>

          <!-- POSTS -->
          <div class="row">
            <div class="col-md-3 text-center">
              <h4>Fotografia do aluno</h4>
              <img class="imgAvatar" src="http://localhost:3000/<%- dado.photoAvatar %>" alt=""
                class="d-block img-fluid mb-3">
            </div>
            <div class="col-md-9">

              <section id="posts">
                <div class="container">
                  <div class="row">
                    <div class="col">
                      <div class="card">
                        <div class="card-header">
                          <h4>Editar dados</h4>
                        </div>
                        <div class="card-body">
                          <form method="POST" action="/cordenacao/update/coodenador" enctype="multipart/form-data">
                            <div class="row">
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label for="name">Nome</label>
                                  <input type="text" name="nome" class="form-control" value="<%- dado.nome %>">
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div class="form-group">
                                  <label for="bi">Bi</label>
                                  <input name="bi" type="text" class="form-control" value="<%- dado.bi %>">
                                </div>
                              </div>
                            </div>
                            <input type="hidden" name="idCoordenador" value="<%- dado.id %>">
                            <div class="form-group">
                              <label for="title">Curso</label>
                              <select name="idCurso" class="form-control">

                                <% for(curso of cursos){ %>
                                  <% if(curso.id === dado.idCurso ) { %>
                                  <option value="<%- curso.id %>"><%- curso.nomeCurso %></option>
                                  <% } %>
                                <% } %>

                                <% for(curso of cursos){ %>
                                  <% if(curso.id !== dado.idCurso ) { %>
                                    <option value="<%- curso.id %>"><%- curso.nomeCurso %></option>
                                    <% } %>
                                <% } %>
                              </select>
                            </div>
                            <div class="row">
                              <div class="form-group col-md-4">
                                <label for="file">BI Foto </label>
                                <input type="file" name="photo" class="form-control-file">
                                <small class="form-text text-muted">Nº max 3mb</small>
                              </div>
                              <div class="col-md-4"></div>
                              <div class="col-md-4">
                                <a href="http://localhost:3000/<%- dado.photoBi %>" target="_blanck" class="btn btn-primary btn-block"> Ver BI</a>
                              </div>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            </div>
          </div>
          <!---->

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- fim do Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; ABDJAM 2020</span>
          </div>
        </div>
      </footer>
      <!-- fim da Footer -->

    </div>
    <!-- fim do Content Wrapper -->

  </div>
  </div>
  <!-- fim da Pag Wrapper -->

  <div class="modal fade" id="passwordModal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header bg-m text-white">
            <h5 class="modal-title">Mudar a Password Cordenador</h5>
            <button class="close" data-dismiss="modal"><span>&times;</span></button>
          </div>
          <div class="modal-body">
            <form action="/cordenacao/update/coodenador" method="POST">
              <div class="form-group">
                <label for="name">Password</label>
                <input type="password" name="password" class="form-control">
              </div>
              
              <div class="form-group">
                <label for="name">Confirma Password</label>
                <input type="password" class="form-control">
              </div>

              <input type="hidden" id="idAluno" name="id" value="<%- dado.id %>">
              <input type="hidden" name="admin" value="true">
          </div>
          <div class="modal-footer">
            <button class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            <button class="btn btn-primary" type="submit">Atualizar Password</button>
          </div>
          </form>
        </div>
      </div>
    </div>
    
  <!-- Logout Modal-->
  <%- include('./includes/modalLogout.ejs'); %>
  <script src="../../js/jquery.min.js"></script>
  <script src="../../js/bootstrap.bundle.min.js"></script>
  <script src="../../js/main.js"></script>
</body>

</html>