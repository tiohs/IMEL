<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dash aluno</title>
    <link rel="stylesheet" href="../../fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="../../css/imel.css" />
    <link rel="sortcut icon" href="../../img/log.ico" type="image/x-icon" />
    <link rel="stylesheet" href="../../css/style.css" />
    <link rel="stylesheet" href="../../css/reclamacao.css" />
    <style></style>
  </head>
  <body>
    <%- include('./includes/header', {user, notificationIndex}); %>

    <!--  -->
    <section class="intro">
      <div class="container">
        <h1>Reclamação</h1>
      </div>
    </section>

    <!--  -->
    <section id="contact" class="bg-white py-5">
      <div class="container">
        <div class="row">
          <div class="col-lg-9">
            <h3>Reclamação</h3>
            <p class="lead">
              Lorem ipsum dolor sit amet, consectetur adipisicing elit.
              Doloribus, et.
            </p>
            <form>
              <div class="form-group">
                <label for="curso">Tipo de reclamação</label>
                <select class="form-control">
                  <option value="">Nota errada</option>
                  <option value="">Me bateram no meu colega</option>
                </select>
              </div>
              <div class="form-group">
                <div class="input-group input-group-lg">
                  <textarea
                    class="form-control"
                    placeholder="Reclamação"
                    rows="5"
                  ></textarea>
                </div>
              </div>
              <input
                type="submit"
                value="Enviar"
                class="btn btn-primary btn-block btn-lg"
              />
            </form>
          </div>
          <div class="col-lg-3 align-self-center">
            <img src="../../img/log.png" alt="" class="img-fluid" />
          </div>
        </div>
      </div>
    </section>
    <!--  -->

    <footer>
      <div class="copy">
        <div class="container">
          <p>
            <a href="#">ABDJAM 2020 - Todos direitos reservados.</a>
          </p>
        </div>
      </div>
    </footer>

    <!-- Logout Modal-->
    <%- include('./includes/modalLogout.ejs'); %>

    <script src="../../js/jquery.min.js"></script>
    <script src="../../js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <%- include('./includes/notification.ejs', {notificationIndex}); %>
  </body>
</html>
