<script>
  var socket = io.connect('http://localhost:3000');
  let valorInicial = parseInt('<%- reclamacaoIndex.length %>');
  countNotification(valorInicial, false);

  async function countNotification(dado, bolean) {
    const showNotification = document.querySelector('#notificationNumber');
    showNotification.innerHTML = dado;
    if(bolean){
      const audioObj = await new Audio('./../music/facebook_sound.mp3');
      audioObj.play();
    }  
  }

  socket.on('idCurso-<%- user.idCurso %>', async (msg) => {
    valorInicial += 1;
    countNotification(valorInicial, true);
  });
</script>
